@import 'eight.theme'

html
  min-width 320px

.container
  margin 0 auto

  @media screen and (min-width: $md)
    width $sm

  @media screen and (min-width: $lg)
    width $md

  @media screen and (min-width: $xl)
    width $lg

.row,
.column
  display flex
  flex 1

.row

  .column
    padding-left $grid-column-gutter * 1
    padding-right $grid-column-gutter * 1

    &.tenth
      flex-basis 10%
      max-width 10%

    &.fifth
      flex-basis 20%
      max-width 20%

    &.fourth
      flex-basis 25%
      max-width 25%

    &.third
      flex-basis 33.33%
      max-width 33.33%

    &.half
      flex-basis 50%
      max-width 50%

  &.compact
    .column
      padding-left $grid-column-gutter * 0
      padding-right $grid-column-gutter * 0

  &.expanded
    .column
      padding-left $grid-column-gutter * 2
      padding-right $grid-column-gutter * 2

  &:not(.reverse)
    .column:first-of-type
      padding-left 0
    .column:last-of-type
      padding-right 0

  &.reverse
    flex-direction row-reverse
    .column:first-of-type
      padding-right 0
    .column:last-of-type
      padding-left 0

  &.stackable
    @media screen and (max-width: $xs)
      flex-flow column wrap

      &.reverse
        flex-direction column-reverse

      > .column
        padding 0
        max-width 100%

    &.sm
      @media screen and (max-width: $sm)
        flex-flow column wrap

        &.reverse
          flex-direction column-reverse

        .column
          padding 0

    &.md
      @media screen and (max-width: $md)
        flex-flow column wrap

        &.reverse
          flex-direction column-reverse

        .column
          padding 0

    &.lg
      @media screen and (max-width: $lg)
        flex-flow column wrap

        &.reverse
          flex-direction column-reverse

        .column
          padding 0
